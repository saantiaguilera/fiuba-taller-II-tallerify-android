<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <EditText
        android:id="@+id/view_search_edit_text"

        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"

        android:hint="@string/view_search_hint"
        android:textColorHint="@color/view_search_hint"

        android:textSize="@dimen/view_search_text_size"
        android:textColor="@color/colorPrimaryDark"

        android:maxLines="1"
        android:inputType="text"
        android:scrollHorizontally="true"

        android:background="@color/transparent"/>

    <ImageView
        android:id="@+id/view_search_clear"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:src="@drawable/ic_shuffle_black_36dp" />

</merge>