<?xml version="1.0" encoding="utf-8"?>
<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"

        android:scrollbars="none" >

        <LinearLayout
            android:orientation="vertical"

            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.u.tallerify.view.base.widget.InputTextView
                android:id="@+id/view_login_native_dialog_username"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:textColor="@color/black"

                app:inputTextView_InputType="textNoSuggestions"
                app:inputTextView_Hint="Usuario..."

                app:inputTextView_MaxLines="1"

                android:layout_marginBottom="8dp" />

            <com.u.tallerify.view.base.widget.InputTextView
                android:id="@+id/view_login_native_dialog_password"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:textColor="@color/black"

                app:inputTextView_InputType="textPassword"
                app:inputTextView_Hint="Contrase;a..."
                app:inputTextView_PasswordToggleEnabled="true"

                app:inputTextView_MaxLines="1"

                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:id="@+id/view_login_native_dialog_signup_extras_container"

                android:orientation="vertical"

                android:visibility="gone"

                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.u.tallerify.view.base.widget.InputTextView
                    android:id="@+id/view_login_native_dialog_name"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:textColor="@color/black"

                    app:inputTextView_InputType="text"
                    app:inputTextView_Hint="Nombre..."

                    app:inputTextView_MaxLines="1"

                    android:layout_marginBottom="8dp" />

                <com.u.tallerify.view.base.widget.InputTextView
                    android:id="@+id/view_login_native_dialog_surname"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:textColor="@color/black"

                    app:inputTextView_InputType="text"
                    app:inputTextView_Hint="Apellido..."

                    app:inputTextView_MaxLines="1"

                    android:layout_marginBottom="8dp" />

                <com.u.tallerify.view.base.widget.InputTextView
                    android:id="@+id/view_login_native_dialog_mail"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:textColor="@color/black"

                    app:inputTextView_InputType="textEmailAddress"
                    app:inputTextView_Hint="Email..."

                    app:inputTextView_MaxLines="1"

                    android:layout_marginBottom="8dp" />

                <com.u.tallerify.view.base.widget.InputTextView
                    android:id="@+id/view_login_native_dialog_country"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:textColor="@color/black"

                    app:inputTextView_Hint="Pais..."
                    app:inputTextView_MaxLines="1"

                    android:layout_marginBottom="8dp" />

                <com.u.tallerify.view.base.widget.InputTextView
                    android:id="@+id/view_login_native_dialog_birthday"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:textColor="@color/black"

                    app:inputTextView_Hint="Birthday..."
                    app:inputTextView_MaxLines="1"

                    android:layout_marginBottom="8dp" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <ImageView
        android:id="@+id/view_login_native_dialog_action_button"

        android:layout_width="match_parent"
        android:layout_height="@dimen/view_dialog_login_button_height"

        android:layout_marginBottom="@dimen/dialog_default_separator"
        android:layout_marginTop="@dimen/dialog_default_separator"

        android:background="@color/colorPrimary"

        android:adjustViewBounds="true"

        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/view_login_native_dialog_signup_button"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:textColor="@color/black"
        android:textSize="12sp"

        android:gravity="center"/>

</merge>