<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="horizontal" >

    <ImageView
        android:id="@+id/notification_compact_album_art"

        android:layout_width="wrap_content"
        android:layout_height="match_parent"

        android:adjustViewBounds="true"

        android:layout_margin="@dimen/notification_compact_vertical_padding" />

    <TextView
        android:id="@+id/notificaton_compact_name"

        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"

        android:gravity="center_vertical"

        android:ellipsize="end"

        android:maxLines="1"

        android:textColor="@color/black"
        android:textSize="@dimen/notification_compact_track_text_size"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/notification_compact_play"

        android:layout_width="wrap_content"
        android:layout_height="match_parent"

        android:layout_marginTop="@dimen/notification_compact_vertical_padding"
        android:layout_marginBottom="@dimen/notification_compact_vertical_padding"
        android:layout_marginRight="@dimen/notification_compact_horizontal_padding"
        android:layout_marginLeft="@dimen/notification_compact_horizontal_padding"

        android:background="@color/transparent"

        android:adjustViewBounds="true"/>

    <ImageView
        android:id="@+id/notification_compact_next"

        android:layout_width="wrap_content"
        android:layout_height="match_parent"

        android:layout_marginTop="@dimen/notification_compact_vertical_padding"
        android:layout_marginBottom="@dimen/notification_compact_vertical_padding"
        android:layout_marginRight="@dimen/notification_compact_horizontal_padding"

        android:background="@color/transparent"

        android:adjustViewBounds="true"

        android:src="@drawable/ic_fast_forward_black_36dp" />

</LinearLayout>